import random


def title():
    return "                  Secret Santa Generator\n"


def duplicate_names(list_with_names):
    duplicate_list = []
    for name in list_with_names:
        if name in duplicate_list:
            return True
        duplicate_list.append(name)
    return False


def names():
    names_of_people = input("Who's joining the Secret Santa? "
                            "Enter the names separated by comma and whitespace. ").split(", ")

    if duplicate_names(names_of_people):
        print("Every name should be different! Try again!")
        names_of_people.clear()
        names()

    return names_of_people


def random_choice():
    participant = ["Alex","Elsie","Elise","Ryan","Chris"]
    participants = participant.copy()

    while participant:
        secret_santa = random.choice(participant)
        print(f"{secret_santa} will give a present to : ")
        participant.remove(str(secret_santa))
        for i in range(1):
            person = random.choice(participants)
            if person == secret_santa:
                person = random.choice(participants)
            print(person)
            participants.remove(str(person))
        if secret_santa == person:
            random_choice()



print(title())
# members = int(input("How many people will participate? "))
#names()
random_choice()
